# docker.webpack
FROM node:12-alpine as base
RUN apk add git
WORKDIR /app/
FROM base as prereq
COPY yarn.lock ./
COPY package*.json ./
RUN yarn


FROM prereq as build
COPY . /app
RUN yarn prod	


FROM nginx:1.17.7-alpine
COPY nginx.conf /etc/nginx/nginx.conf
COPY --from=build /app/dist /usr/share/nginx/html
